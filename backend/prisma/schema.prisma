generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  nombre     String
  contrasenia String
  apellido String
  direccion String
}

model Product {
  id       Int     @id @default(autoincrement())
  marca String
  nombre String
  descripcion String
  idGenero Int
  precio Float
  idCategoria   Int
  url String

  categoria     Categoria @relation(fields: [idCategoria], references: [id])
  genero        Genero    @relation(fields: [idGenero], references: [id])
}

model Categoria {
  id       Int       @id @default(autoincrement())
  nombre   String
  productos Product[] // Relación uno a muchos (una categoría tiene muchos productos)
}

model Genero {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  productos Product[] // Relación uno a muchos
}

